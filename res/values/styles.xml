<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="Theme.Sherlock.Light">
        <item name="switchStyle">@style/Widget.Holo.Light.CompoundButton.Switch</item>
        <item name="switchPreferenceStyle">@style/Preference.SwitchPreference</item>
    </style>

    <style name="lightboxButton">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:textColor">@drawable/btn_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#75000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="lightboxButton.Blue">
        <item name="android:background">#6699FF</item>
    </style>

    <style name="lightboxButton.Green">
        <item name="android:background">#99FF80</item>
    </style>

    <style name="lightboxButton.Grey">
        <item name="android:background">@drawable/btn_grey</item>
    </style>
    
    <style name="subscribe">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:textColor">@drawable/btn_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#99FF80</item>
    </style>

    <style name="AppBackground">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">#000000</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="HeaderDivider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/abs__holo_blue_light</item>
    </style>

    <style name="HeaderText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="LoadingText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dip</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18dip</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PhoneIcon">
        <item name="android:layout_width">20dip</item>
        <item name="android:layout_height">20dip</item>
<!--         <item name="android:background">@drawable/phone_icon_background</item> -->
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="AboutBackground">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="AboutLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AboutHeading">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingTop">15dip</item>
        <item name="android:paddingBottom">15dip</item>
        <item name="android:textSize">20dip</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AboutContent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingTop">15dip</item>
        <item name="android:paddingBottom">15dip</item>
        <item name="android:textSize">18dip</item>
    </style>

    <style name="AboutButton">
        <item name="android:layout_width">140dip</item>
        <item name="android:layout_height">45dip</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18dip</item>
<!--         <item name="android:background">@drawable/about_button_selector</item> -->
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
    </style>

</resources>