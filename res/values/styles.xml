<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="Theme.Sherlock.Light">
        <item name="switchStyle">@style/Widget.Holo.Light.CompoundButton.Switch</item>
        <item name="switchPreferenceStyle">@style/Preference.SwitchPreference</item>
        <item name="titleTextStyle">@style/customTextAppearance.Sherlock.Widget.ActionBar.Title</item>
    </style>

    <!-- define text style of Action bar Title -->
    <style name="customTextAppearance.Sherlock.Widget.ActionBar.Title" parent="TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#083647</item>
        <item name="android:shadowColor">#4ccfff</item>
        <item name="android:shadowDy">3</item>
    </style>

    <style name="unreadBoxView">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:textColor">@drawable/btn_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#75000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="subscribe">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:textColor">@drawable/btn_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#99FF80</item>
    </style>

    <style name="AppBackground">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">#000000</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="headerContainer" parent="@style/headerText">
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/bg_header</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:id">@+id/header</item>
    </style>

    <style name="HeaderDivider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/abs__holo_blue_light</item>
    </style>

    <style name="headerIcon">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:src">@drawable/univr</item>
    </style>

    <style name="headerText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="LoadingText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dip</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PhoneIcon">
        <item name="android:layout_width">20dip</item>
        <item name="android:layout_height">20dip</item>
        <!-- <item name="android:background">@drawable/phone_icon_background</item> -->
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="AboutBackground">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="AboutLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AboutHeading">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingTop">15dip</item>
        <item name="android:paddingBottom">15dip</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AboutContent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingTop">15dip</item>
        <item name="android:paddingBottom">15dip</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="separator" parent="@style/contentText">
        <item name="android:textStyle">bold</item>
Ã¬                                <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">@color/abs__holo_blue_light</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:background">@drawable/bg_separator</item>
    </style>

    <style name="contentContainer" parent="@style/contentText">
        <item name="android:background">@drawable/bg_content</item>
    </style>

    <style name="contentText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorLink">#37589B</item>
        <item name="android:textColorHighlight">#D0D0D0</item>
    </style>

    <style name="contentTextBold" parent="@style/contentText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="contentTextSmall" parent="@style/contentText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#5A5A5A</item>
    </style>

</resources>